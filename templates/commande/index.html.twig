{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}
<h1 class="text-center">Mes commandes</h1>

{% for commande in commandes %}
<div class="commande">
    <ul>
        <li>Num√©ro de commande : {{ commande.numero }}</li>
        <li>Date de commande : {{ commande.dateCommande | date('d/m/Y H:i:s') }}</li>
        <li>Adresse de livraison : {{ commande.adresseLivraison }}</li>
        {% for item in commande.paniers %}
            <li>Produits : {{item.produit}} {{item.quantite}}</li>
        {% endfor %}
    </ul>
</div>
{% endfor %}
{% endblock %}