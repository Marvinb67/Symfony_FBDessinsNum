<h2>Dernieres créations</h2>
{% for produit in produits %}
<div class="card mb-3" style="width: 100%;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="image/dessins/{{ produit.image }}" class="img-fluid rounded-start carte-img" style="width: 100%;" alt="{{ produit }}">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{ produit }}</h5>
                <p class="card-text">{{ produit.description }}</p>
                <p class="card-text"><small class="text-muted">{{ produit.prix }} €</small></p>
                <a href="{{ path('ajout_panier', {'id': produit.id}) }}" class="btn btn-primary">Ajouter au panier</a>
            </div>
        </div>
    </div>
</div>
{% endfor %}
